		"@types/jest": "^24.0.15",
		"@types/node": "^8.0.29",
		"@types/uuid": "^3.4.4",
		"@types/yup": "^0.26.16",
		"gql2ts": "^1.10.1",
		"nodemon": "^1.19.1",
		"ts-jest": "^24.0.2",
		"ts-node": "3.3.0",
		"tslint": "^5.17.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "3.3.3333"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"graphql": "^14.3.1",
		"graphql-import": "^0.7.1",
		"graphql-request": "^1.8.2",
		"graphql-tools": "^4.0.4",
		"graphql-yoga": "^1.17.4",
		"ioredis": "^4.10.0",
